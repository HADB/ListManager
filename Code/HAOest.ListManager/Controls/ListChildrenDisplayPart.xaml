<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HAOest.ListManager.Controls" x:Name="listChildrenDisplayPart" x:Class="HAOest.ListManager.Controls.ListChildrenDisplayPart" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="330" SizeChanged="listChildrenDisplayPart_SizeChanged">
    <Border BorderBrush="{DynamicResource BorderBrush_Blue}" BorderThickness="2" Grid.Column="2" Margin="0" Grid.Row="2" Background="{DynamicResource ListBoxItemBackground}">
        <ScrollViewer x:Name="ListChildrenScrollViewer" Margin="0" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <StackPanel x:Name="listChildrenStackPanel" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
    </Border>
</UserControl>
