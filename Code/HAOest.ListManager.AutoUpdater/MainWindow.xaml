<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="AutoUpdater" x:Class="HAOest.ListManager.AutoUpdater.MainWindow"
        Title="正在更新文件" Height="136" Width="404" Background="White" WindowStartupLocation="CenterScreen" Loaded="autoUpdater_Loaded" >
        <Grid Background="#CCCFFFC4">
            <Grid.RowDefinitions>
                <RowDefinition Height="75*"/>
                <RowDefinition Height="26"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <ProgressBar x:Name="ProgressBar" Margin="20,15,20,20" Grid.Row="5"/>
            <StackPanel Margin="0,0,0,26" Grid.Row="1" Orientation="Horizontal" Grid.RowSpan="2">

                <Label Content="状态：" HorizontalAlignment="Left" Margin="20,0,0,0" />
                <Label x:Name="LbState" Content="等待开始" HorizontalAlignment="Left"/>
            </StackPanel>
            <StackPanel Margin="0" Orientation="Horizontal" Grid.Row="1"/>
            <StackPanel Orientation="Horizontal" Grid.Row="2"/>

        </Grid>
</Window>
